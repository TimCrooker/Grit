{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"outDir": "./dist",
		"sourceMap": true,
		"declaration": true,
		"resolveJsonModule": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"moduleResolution": "node",
		"types": [
			"node",
			"jest"
		],
		"paths": {
			"@": [
				"./"
			],
			"@/*": [
				"./*"
			],
		},
	},
		"include": [
		"src/"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
}